<div class="header">
  <a class="back-btn-a" href="<%= categories_path %>">
    <img class="back-btn"  src="<%= asset_path('arrow_back.ico') %>" alt="Back" id="back-img">
  </a>
  <h1>Add new Category</h1>
</div>

<%= form_with(model: [@category], url: categories_path) do |form| %>
  <div class = "form-container">
    <div class="field">
      <%= form.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Category Name",  class: "input-field", required: true %>
    </div>

    <div class="field">
      <%= form.text_field :icon, autofocus: true, autocomplete: "icon", placeholder: "Image Icon URL",  class: "input-field", required: true %>
    </div>
    
    <div class="form-btn-container">
      <%= form.submit 'Create Category', class: "form-btn" %>
    </div>
  </div>
<% end %>